<% include layout/header %>
<style>
    @media only screen and (max-width: 768px) {
        .submit{
            width: 100%
        }
    }
</style>

<div class="container ">
    <h3>個人資料</h3>
    <hr>
    <form method="POST" action="/users/updateUserinfo">

        <div class="row" style="height: 375px;">
            <div class="col-lg-6 col-sm-12">
                <div class="form-group">
                    <h4>姓名</h4>
                    <input type="text" name="name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                        value="<%=user.name%>">
                </div>
                <div class="form-group">
                    <h4>信箱</h4>
                    <input type="text" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                        value="<%=user.email%>">
                </div>
                <%if(user.permission == "student"){%>
                <div class="form-group">
                    <h4>學校</h4>
                    <input type="text" name="schoolname" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                        value="<%=user.schoolname%>">
                </div>
                <div class="form-group">
                    <h4>科系</h4>
                    <input type="text" name="department" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                        value="<%=user.department%>">
                </div>
                <div class="form-group">
                    <h4>學號</h4>
                    <input type="text" name="studentid" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                        value="<%=user.studentid%>">
                </div>

                <%}%>
            </div>
            <div class="col-lg-6 col-sm-12">
                <h4>簡介<small style="font-size: 14px;color: gray"> 讓其他人可以更認識您</small></h4>

                <div class="form-group">
                    <textarea name="userinfo" type="text" id="form7" class="md-textarea form-control" style="resize: none ;height:100%"><%=user.userInfo%>            
                    </textarea>
                </div>
            </div>
            <div class="col-12">
                <%if(authenticate){%>
                <button type="submit" class="btn btn-primary float-right submit">儲存</button>
                <%}%>
            </div>
        </div>
        <div class="row">

        </div>

    </form>

</div>
<% include layout/footer %>